<div class='container text-center'>
  <h1>ShorturlCreator</h1>
  <img
    src='https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png'
    class='rounded mx-auto d-block'
    alt='...'
  />
  {{#if id}}
    <div>
      Result:
      <a id="shortUrlLink" href='http://localhost:3000/{{id}}'>http://localhost:3000/{{id}}</a>
    </div>
    <div>
      <button
        class='btn btn-outline-success'
        type='button'
        id='copyBtn'
      >Copy URL</button>
      <a class="btn btn-primary" href="http://localhost:3000">Back to HomePage</a>
    </div>
  {{else}}
    <form action='/shorturl' method='POST' id='urlForm'>
      <div class='input-group mb-3'>
        <input
          name='url'
          type='url'
          class='form-control'
          placeholder='Input URL here'
          id='urlInput'
        />
        <button
          class='btn btn-outline-primary'
          type='submit'
        >Get URL</button>
      </div>
    </form>
  {{/if}}
</div>