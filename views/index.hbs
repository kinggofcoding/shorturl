<div class='container text-center'>
  <h1>ShorturlCreator</h1>
  <img
    src='https://assets-lighthouse.alphacamp.co/uploads/image/file/16716/ExportedContentImage_00.png'
    class='rounded mx-auto d-block'
    alt='...'
  />
  {{#if id}}
    <div>
      Result:
      <a href='http://localhost:3000/{{id}}'>http://localhost:3000/{{id}}</a>
    </div>
  {{else}}
    <form action='/shorturl' method='POST'>
      <div class='input-group mb-3'>
        <input
          name='url'
          type='text'
          class='form-control'
          placeholder='Input URL here'
        />
        <button
          class='btn btn-outline-primary'
          type='submit'
          id='button-addon2'
        >Get URL</button>
      </div>
    </form>
  {{/if}}
</div>